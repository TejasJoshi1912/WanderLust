<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2" >
<body>
  <br><br>
    <h3>Create New Listing !</h3>
  <form method="POST" action="/listings">
    <div class="mb-3">
      <label for="title" class="form-lable">Title</label>
  <input name="listing[title]" placeholder="enter title" type="text" class="form-control"/>
    </div>
    <div class="mb-3">
         <label for="title" class="form-lable">Description</label>

        <textarea name="listing[description]" class="form-control"></textarea>
     </div>
    
     <div class="mb-3">
      <label for="image" class="form-lable">Image Link</label>
      
      <input name="listing[image]"type="text" placeholder="Enter Image Link" class="form-control"  />

     </div>
     <div class="row col-md-4">
      <div class="mb-3">
            <label for="Price" class="form-lable">Price</label>
              <input name="listing[price]" type="number" class="form-control" placeholder="Enter Price" />

     </div>
     <div class="mb-3 col-md-8">
      <label for="country" class="form-lable">Country</label>
        <input name="listing[country]"  type="text" class="form-control" placeholder="Enter Country"/>
     </div>

     </div>


     <div class="mb-3">
            <label for="location" class="form-lable">Location</label>

        <input name="listing[location]" type="text" class="form-control" placeholder="Enter Location" />

     </div>
  <button class="btn btn-dark add-btn">ADD</button>
  <hr><hr>
</form>
</body>
</div>
</div>